<section class="transaction-form" >

  <form action="/transaction" method="POST">

  <input
      id="transaction"
      type="number"
      step="any"
      name="transaction"
      placeholder="Add a transaction"
    />
  <select name="tag">

  </select>
  <button>+</button>
  <button>-</button>

  </form>

</section>

<section class="transactions-list">
  {{#each transactions}}
  <h3 >{{transaction}}</h3>
  {{/each}}

</section>